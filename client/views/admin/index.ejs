       <input type="password" class="form-control"  placeholder="Confirm password" id="pwd_2" onChange="check_pwd()">
     </div>
     
     <br><br>
    
     <button disabled id='pwd_btn' class="btn btn-primary" onClick="pwd_change()">Change Password</button>
   </div>
     </div>
