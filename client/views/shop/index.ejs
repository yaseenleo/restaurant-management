                    <div class="input-group-prepend">
                        <span class="input-group-text">Search By Title,date</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Title,Date?" id='bill_q' onkeyup="search('bill')">
                </div>
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Upload Date</th>
                            <th>Download</th>

                        </tr>
