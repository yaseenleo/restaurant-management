                    </div>
                    <input type="text" class="form-control" placeholder="Title,Date?" id='doc_q' onkeyup="search('doc')">
                </div>
                <table class="table table-dark table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Upload Date</th>
                            <th>Download</th>

                        </tr>
                    </thead>
                    <tbody id='doc_table'>




                    </tbody>
                </table>
            </div>
        </div>

        <!----      docs_div        ----------->
        <!---       employees_div        ------>
