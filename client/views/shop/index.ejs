                <hr>


                <form action='/shop/bills' method="POST" enctype='multipart/form-data'>

                    <div class="form-group ">
                        <label for="title">Title:</label>
                        <input type="text" class="form-control" placeholder="Enter Title/Little Description" name="title">
                    </div>
                    <div class="form-group">
